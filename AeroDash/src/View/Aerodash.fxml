                        <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
                     </VBox.margin>
                  </Label>
                      <HBox prefHeight="100.0" prefWidth="200.0">
                          <children>
                              <Label fx:id="AirSpeedLabel" text="AirSpeed : ">
                                  <HBox.margin>
                                      <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
                                  </HBox.margin>
                              </Label>
                              <Label fx:id="airSpeedValue" text="N/A">
                                  <HBox.margin>
                                      <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
                                  </HBox.margin>
                              </Label>
                          </children>
                      </HBox>
      
                            <HBox prefHeight="100.0" prefWidth="0.0">
                          <children>
                              <Label fx:id="LiftLabel" text="LIFT: ">
                                  <HBox.margin>
                                      <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
                                  </HBox.margin>
                              </Label>
                              <Label fx:id="liftValue" text="N/A">
                                  <HBox.margin>
                                      <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
                                  </HBox.margin>
                              </Label>
                          </children>
                      </HBox>
      
                                  <HBox prefHeight="100.0" prefWidth="200.0">
                          <children>
                              <Label fx:id="DrageLabel" text="DRAG: ">
                                  <HBox.margin>
                                      <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
                                  </HBox.margin>
                              </Label>
                              <Label fx:id="dragValue" text="N/A">
                                  <HBox.margin>
                                      <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
                                  </HBox.margin>
                              </Label>
                          </children>
                      </HBox>
                  </children>
              </VBox>
            </children>
        </HBox>
    </bottom>
</BorderPane>
