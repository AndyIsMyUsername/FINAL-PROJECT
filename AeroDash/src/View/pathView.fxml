<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="800.0" prefWidth="1200.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.PathViewController">
   <center>
      <Canvas fx:id="pathCanvas" height="600.0" width="900.0" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </BorderPane.margin>
      </Canvas>
   </center>
   <top>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="titleLabel" text="ROCKET TRAJECTORY PATH" styleClass="chart-title">
               <VBox.margin>
                  <Insets bottom="10.0" left="20.0" right="20.0" top="20.0" />
               </VBox.margin>
            </Label>
            <HBox spacing="30.0">
               <children>
                  <Label fx:id="velocityLabel" text="Velocity: N/A">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Label>
                  <Label fx:id="angleLabel" text="Angle: N/A" />
                  <Label fx:id="maxHeightLabel" text="Max Height: N/A" />
                  <Label fx:id="rangeLabel" text="Range: N/A" />
               </children>
               <VBox.margin>
                  <Insets bottom="10.0" left="20.0" right="20.0" />
               </VBox.margin>
               <padding>
                  <Insets left="20.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </top>
   <bottom>
      <HBox alignment="CENTER" spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="backButton" onAction="#backToDashboard" text="Back to Dashboard" />
            <Button fx:id="animateButton" onAction="#animateTrajectory" text="Animate" />
            <Button fx:id="resetAnimationButton" onAction="#resetAnimation" text="Reset" />
         </children>
         <BorderPane.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="10.0" />
         </BorderPane.margin>
      </HBox>
   </bottom>
</BorderPane>