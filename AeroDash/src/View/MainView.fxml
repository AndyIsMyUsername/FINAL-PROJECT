<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/20" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controller.MainPageController"
            prefWidth="800" prefHeight="600">

    <children>
        <VBox prefWidth="800" prefHeight="600" spacing="30" alignment="CENTER">
            
            <!-- Background gradient -->
            <style>
                -fx-background-color: linear-gradient(to bottom, #0b3d91, #0a2238);
            </style>

            <!-- Title -->
            <Label text="ðŸš€ Aerospace Dashboard" textFill="white">
                <font>
                    <Font size="36"/>
                </font>
                <effect>
                    <DropShadow color="BLACK" radius="5" offsetX="2" offsetY="2"/>
                </effect>
            </Label>

            <!-- Subtitle -->
            <Label text="Explore Lift, Drag &amp; Rocket Trajectories" textFill="lightgray">
                <font>
                    <Font size="20"/>
                </font>
            </Label>

            <!-- Spacer -->
            <VBox spacing="20"/>

            <!-- Start Button -->
            <Button fx:id="startButton" text="Start Simulation" prefWidth="250" prefHeight="60"
                    style="-fx-background-color: #1e90ff; -fx-text-fill: white; -fx-font-size: 18px;">
                <effect>
                    <DropShadow color="BLACK" radius="5" offsetX="3" offsetY="3"/>
                </effect>
            </Button>
        </VBox>
    </children>
</AnchorPane>
